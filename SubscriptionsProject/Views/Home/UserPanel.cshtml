@model SubscriptionsProject.Models.UserPanelModel
@{
	Layout = "~/Views/Shared/_LayoutUserPanel.cshtml";
}

<h2><label>Hoş Geldin ! </label>  @Model.UserItem.Name</h2>

<div class="row">
	<div class="col-lg-3 col-xs-6">
		<div class="small-box bg-aqua">
			<div class="inner">
				<h3> @Model.CampaignCount</h3>
				<p>Kampanyalarımız</p>
			</div>
			<div class="icon">
				<i class="ion ion-bag"></i>
			</div>
			<a href="#" class="small-box-footer"><i class="fa fa-arrow-circle-right"></i>  FunLab  <i class="fa fa-arrow-circle-left"></i></a>
		</div>
	</div>
	<div class="col-lg-3 col-xs-6">
		<div class="small-box bg-green">
			<div class="inner">
				<h3>@Model.UserCount<sup style="font-size: 20px"></sup></h3>
				<p>Abone Sayımız</p>
			</div>
			<div class="icon">
				<i class="ion ion-stats-bars"></i>
			</div>
			<a href="#" class="small-box-footer"><i class="fa fa-arrow-circle-right"></i>  FunLab  <i class="fa fa-arrow-circle-left"></i></a>
		</div>
	</div>
	<div class="col-lg-3 col-xs-6">
		<div class="small-box bg-yellow">
			<div class="inner">
				<h3>@Model.ProcessCount</h3>
				<p>Geçmiş İşleminiz</p>
			</div>
			<div class="icon">
				<i class="ion ion-person-add"></i>
			</div>
			<a href="#" class="small-box-footer"><i class="fa fa-arrow-circle-right"></i>  FunLab  <i class="fa fa-arrow-circle-left"></i></a>
		</div>
	</div>
	<div class="col-lg-3 col-xs-6">
		<div class="small-box bg-red">
			<div class="inner">
				<h3>@Model.CurrentDate  gün</h3>
				<p>Kalan Abonelik Hakkınız</p>
			</div>
			<div class="icon">
				<i class="ion ion-pie-graph"></i>
			</div>
			<a href="#" class="small-box-footer"><i class="fa fa-arrow-circle-right"></i>  FunLab  <i class="fa fa-arrow-circle-left"></i></a>
		</div>
	</div>
</div>


<h2><label>Mevcut Aboneliğiniz </label></h2>
@Model.UserItem.Subscription.Name

<br /><br />

@if (Model.CurrentDate <= 0)
{
<div class="box">
	<h2><label>Sayın </label>  @Model.UserItem.Name , ödeme yapmanız gereken faturalarınız mevcut.</h2>
	<a href="../Home/UserAllProcess" class="text-center btn btn-success">Ödeme yap</a>
</div>
}

